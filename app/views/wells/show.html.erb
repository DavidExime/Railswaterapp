
<div id='welldesc'><h1>Description of each individual Well</h1>

Location:<%=@well.location %><br>
Water price:<%=@well.price %><br>
Water Quality:<%=@well.quality %><br>
<hr>

<%= form_tag charges_path do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="Price">
      <span>Amount Due: <%= @well.price %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Mo Water Please!"
          data-amount= <%= @well.price * 100 %> 
          data-locale="auto"></script>
<% end %>
</div>


